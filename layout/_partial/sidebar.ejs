<div class="personal-info">
  <figure>
    <% if(theme.photo) { %>
      <a href="<%- config.root %>">
        <img id="icon-photo-normal" class="personal-photo animated rotateIn" src="<%- theme.photo %>" alt="<%- config.author %>">
      </a>
    <% } %>
    <figcaption>
      <h3 class=><%- config.author %></h3>
      <p><%- theme.about %></p>
    </figcaption>
  </figure>
  <section class="social">
    <% if( theme.twitter ) { %>
      <a target="_blank" class="icon twitter depth" href="http://twitter.com/<%- theme.twitter %>"></a>
    <% } %>
    <% if( theme.facebook ) { %>
      <a target="_blank" class="icon facebook depth" href="http://fb.com/<%- theme.facebook %>"></a> 
    <% } %>
    <% if( theme.googleplus ) { %>
      <a target="_blank" class="icon googleplus depth" href="http://plus.google.com/<%- theme.googleplus %>"></a> 
    <% } %>
    <% if( theme.github) { %>
      <a target="_blank" class="icon github depth" href="http://github.com/<%= theme.github %>"></a>
    <% } %>
    <% if( theme.email ) { %>
      <a target="_blank" class="icon email depth" href="mailto:<%- theme.email %>"></a>
    <% } %>
    <% if( theme.zhihu ) { %>
      <a target="_blank" class="icon zhihu depth" href="http://zhihu.com/people/<%- theme.zhihu %>"></a>
    <% } %>
  </section>
</div>
<div class="theme-info">
  <a target="_blank" href="https://github.com/thiagopnts/hexo-persona-dark">Persona Dark Theme</a> <% if (config.author){ %>
  &copy; - <%= new Date().getFullYear() %> <%= config.author %>
  <% } else { %>
  &copy; <%= new Date().getFullYear() %> <%= config.title %>
  <% } %>
</div>
