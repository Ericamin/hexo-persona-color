<% page.posts.each(function(item){ %>
  <!-- <%- partial('_partial/article', {item: item, index: true}) %> -->

  <div class="archive">
    <article class="<%= item.layout %>">
      <div class="post-content">
        <header>
            <div class="icon"></div>
            <% if (item.link){ %>
              <% if (item.title){ %>
                <h1 class="title link"><a href="<%- item.link %>" target="_blank"><%= item.title %></a></h1>
              <% } else { %>
                <h1 class="title link"><a href="<%- item.link %>" target="_blank"><%= item.link %></a></h1>
              <% } %>
            <% } else { %>
              <h1 class="title" style="display:inline"><a href="<%- config.root %><%- item.path %>"><%= item.title %></a></h1>
            <% } %>
            <time class="time title" datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
          </header>
      </div>
    </article>
  </div>
<% }); %>

